$spacingBase = 1.5rem
$red = #d00
$grayDark = #45506d
$grayLight = #DAE1E9
$grayLighter = #f1f2f3
$primary = #379eff
$borderRadius = 0px
$sansFont = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
$monospaceFont = "SF Mono", "Monaco", "Inconsolata", "Fira Mono", "Droid Sans Mono", "Source Code Pro", monospace
$tablet = 640px
$mobile = ($tablet - 1px)
$transitionBase = 0.2s

shadow()
  box-shadow: none // rgba(0,0,0,.075) 0 1px 2px 0

card()
  shadow()
  border: 1px solid $grayLight
  background: #fff
  padding: $spacingBase
  border-radius: 3px

modal()
  background: $grayLighter
  width: 100vw
  min-height: 100vh
  left: 0
  top: 0
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  padding: 0.5rem

modalBody()
  card()
  width: 100%
  max-width: 46rem

fontSmall()
  font-size: 87.5%

textCaps()
  text-transform: uppercase
  fontSmall()
  letter-spacing: 0.1em
  font-weight: 600

selectable()
  padding: 1rem

input()
  border: $grayLight solid 1px
  box-shadow: none
  padding: 0.75rem
  font-weight: 500
  width: 100%
  font-size: inherit
  border-radius: borderRadius
  transition: border-color $transitionBase
  will-change: border-color
  box-shadow: none
  border-radius: 0
  -webkit-appearance: none

  &[disabled]
    background: $grayLighter
    cursor: not-allowed

  &:focus
    box-shadow: none
    outline: 0
    border-color: $primary
    color: $primary
